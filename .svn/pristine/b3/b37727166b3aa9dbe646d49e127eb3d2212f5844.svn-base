body {
  background-color: pink;
}
.banner {
  width: 900px;
  height: 500px;
}
.goodsShow {
  width: 100%;
  height: 100%;
  position: relative;
}
.wares {
  width: 100%;
}
.ware {
  width: 90%;
  text-align: center;
  margin: 20px auto 0;
  table-layout: fixed;
}
.ware td {
  text-overflow: ellipsis;
}
.ware th,
.ware td {
  width: 100px;
  height: 40px;
  text-align: center;
  border: 1px solid #000;
  overflow: hidden;
}
.ware th:last-child,
.ware td:last-child {
  width: 160px;
}
.ware .tdLast .btn {
  height: 30px;
  padding: 0 10px;
  margin: 0 10px;
  background-color: deepskyblue;
  text-align: center;
  line-height: 30px;
}
.pageChange {
  position: absolute;
  bottom: 40px;
  left: 50px;
}
.pageChange tbody {
  border: none;
}
.pageChange .link {
  width: 100%;
  height: 36px;
}
.pageChange .link td {
  width: 100%;
  height: 100%;
  font-size: 18px;
  border: none;
}
.pageChange .link td span {
  font-size: 19px;
  color: #333;
  font-weight: 500;
  padding: 0 6px;
}
.pageChange .link td a {
  display: inline-block;
  font-size: 20px;
  cursor: pointer;
  color: #333;
}
.pageChange .link td a:hover {
  color: #e3e4e5;
}
.pageChange .link td .pag {
  width: 25px;
  height: 20px;
  background-color: #eee;
  color: #333;
  font-size: 20px;
  text-align: center;
  line-height: 20px;
}
